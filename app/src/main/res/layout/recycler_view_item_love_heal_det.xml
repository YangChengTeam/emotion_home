<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/shape_bg_white_gray_brim_det"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_sense_container"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="5dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:drawableLeftCompat="@mipmap/icon_scenes"
            tools:text="你咋还没有女朋友呢惯例" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.33dp"
            android:layout_alignParentBottom="true"
            android:background="#E1E1E1" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_love_heal_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:paddingStart="14dp"
        android:paddingTop="12dp"
        android:paddingEnd="14dp"
        android:paddingBottom="20dp" />
</LinearLayout>

