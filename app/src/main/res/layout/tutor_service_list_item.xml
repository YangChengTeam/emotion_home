<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingRight="15dp">

    <com.yc.emotion.home.base.ui.widget.RoundCornerImg
        android:id="@+id/iv_tutor_service_list_pic"
        android:layout_width="104dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/service_picture_one"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tutor_service_list_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:text="情感修复专家挽回服务"
        android:textColor="@color/gray_222222"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/iv_tutor_service_list_pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_tutor_service_list_price_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="¥"
        android:textColor="@color/app_color"
        android:textSize="12sp"
        android:layout_marginBottom="2dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_tutor_service_list_title"
        app:layout_constraintBottom_toBottomOf="@id/iv_tutor_service_list_pic" />

    <TextView
        android:id="@+id/tv_tutor_service_list_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:text="2000.00"
        android:textColor="@color/app_color"
        android:textStyle="bold"       android:layout_marginBottom="2dp"
        app:layout_constraintLeft_toRightOf="@id/tv_tutor_service_list_price_symbol"
        app:layout_constraintBottom_toBottomOf="@id/iv_tutor_service_list_pic" />

    <TextView
        android:id="@+id/tv_tutor_service_list_buy_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="166人已购"
        android:textColor="@color/gray_999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_tutor_service_list_pic"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_tutor_service_list_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3好评"
        android:textColor="@color/gray_999"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tv_tutor_service_list_buy_count"
        app:layout_constraintRight_toRightOf="parent" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/gray_edebeb"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_tutor_service_list_pic" />
</androidx.constraintlayout.widget.ConstraintLayout>