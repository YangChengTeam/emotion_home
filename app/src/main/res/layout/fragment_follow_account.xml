<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_solid_bg_8"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/top_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@mipmap/account_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_method1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="17dp"
            android:text="方法一："
            android:textColor="@color/gray_222222"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_iv" />

        <TextView
            android:id="@+id/tv_method1_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="扫描下方二维码，关注公众号"
            android:textColor="@color/gray_999"
            android:textSize="@dimen/sp_13"
            app:layout_constraintStart_toStartOf="@id/tv_method1"
            app:layout_constraintTop_toBottomOf="@id/tv_method1" />

        <ImageView
            android:id="@+id/iv_code"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/code"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_method1_desc" />

        <TextView
            android:id="@+id/tv_save_code"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="38dp"
            android:background="@drawable/save_code_bg"
            android:gravity="center"
            android:text="保存二维码"
            android:textColor="#ffff2d55"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/iv_code" />

        <TextView
            android:id="@+id/tv_method2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="17dp"
            android:text="方法二："
            android:textColor="@color/gray_222222"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_save_code" />

        <TextView
            android:id="@+id/tv_method2_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="复制微信号，粘贴搜索关注公众号"
            android:textColor="@color/gray_999"
            android:textSize="@dimen/sp_13"
            app:layout_constraintStart_toStartOf="@id/tv_method2"
            app:layout_constraintTop_toBottomOf="@id/tv_method2" />


        <TextView
            android:id="@+id/tv_copy_wx"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/copy_wx_bg"
            android:gravity="center"
            android:text="复制微信号"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_method2_desc" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@mipmap/cancle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_container" />
</androidx.constraintlayout.widget.ConstraintLayout>