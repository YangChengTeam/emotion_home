<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="10dp">


    <LinearLayout
        android:id="@+id/ll_left_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone">


        <ImageView
            android:id="@+id/item_details_bean_iv_sex"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/verbal_service" />

        <TextView
            android:id="@+id/item_details_bean_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/chat_left"
            android:gravity="center_vertical"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="中文" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_right_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/iv_right_sex"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/verbal_men_service" />

        <TextView
            android:id="@+id/tv_details_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="4dp"
            android:layout_toStartOf="@id/iv_right_sex"
            android:background="@drawable/chat_right"
            android:gravity="center_vertical"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="中文" />

    </RelativeLayout>

</FrameLayout>