<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ListView
            android:id="@+id/pd_message_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:divider="@android:color/transparent"
            android:listSelector="@android:color/transparent"
            android:transcriptMode="alwaysScroll"
            />
        <ListView
            android:id="@+id/pd_suggestion_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:scrollbars="vertical"
            android:divider="@android:color/transparent"
            android:listSelector="@android:color/transparent"
            />
        <LinearLayout
            android:id="@+id/ll_edit_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="horizontal"
            android:background="@color/pd_panel_back"
            >
            <ImageButton
                android:id="@+id/pd_input_key"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:src="@drawable/pd_input_key"
                android:background="@android:color/transparent"
                android:visibility="gone"
                />
            <ImageButton
                android:id="@+id/pd_input_audio"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:src="@drawable/pd_input_audio"
                android:background="@android:color/transparent"
                />
            <EditText
                android:id="@+id/pd_input_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:maxHeight="120dp"
                android:textSize="18sp"
                android:textColor="@color/pd_message_text"
                />
            <Button
                android:id="@+id/pd_input_record"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/pd_input_record"
                android:text="@string/pd_hold_to_talk"
                android:textSize="18sp"
                android:textColor="@color/pd_button_text_dark"
                android:visibility="gone"
                />
            <ImageButton
                android:id="@+id/pd_input_emoji"
                android:layout_width="36dp"
                android:layout_height="48dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="bottom"
                android:src="@drawable/pd_input_emoji"
                android:background="@android:color/transparent"
                />
            <ImageButton
                android:id="@+id/pd_input_plugin"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:src="@drawable/pd_input_plugin"
                android:background="@android:color/transparent"
                />
            <Button
                android:id="@+id/pd_input_send"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="bottom"
                android:textSize="16sp"
                android:textColor="@color/pd_button_text_light"
                android:text="@string/pd_send"
                android:background="@drawable/pd_input_send"
                android:visibility="gone"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pd_emoji_back"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:visibility="gone"
            />
        <GridLayout
            android:id="@+id/pd_plgin_back"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="16dp"
            android:visibility="gone"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/pd_record_back"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/pd_record_back"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/pd_record_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="36dp"
            android:src="@drawable/pd_record_cancel"
            />
        <TextView
            android:id="@+id/pd_record_state"
            android:layout_width="160dp"
            android:layout_height="28dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:background="@color/pd_record_finish"
            android:textColor="@color/pd_record_text"
            android:textSize="14sp"
            android:gravity="center"
            />
    </RelativeLayout>
</RelativeLayout>