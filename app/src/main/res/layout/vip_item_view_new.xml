<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_become_vip_tail_cl_con_01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_marginEnd="10dp"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/vip_item_selector_new"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:src="@mipmap/vip" />

    <TextView
        android:id="@+id/tv_expire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@mipmap/vip_exipre_bg"
        android:gravity="center"
        android:textColor="#DCAF76"
        android:textSize="10sp"
        android:visibility="invisible"
        tools:text="2019.10.16到期" />

    <TextView
        android:id="@+id/tv_vip_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:textColor="@color/vip_color_selector"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        tools:text="VIP特权季卡" />

    <LinearLayout
        android:id="@+id/ll_vip_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_become_vip_tail_tv_pay_tit_01">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/gold_835429"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_vip_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gold_835429"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            tools:text="56" />

        <TextView
            android:id="@+id/item_become_vip_tail_tv_original_price_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="4dp"
            android:text="555"
            android:textColor="#755B3E"
            android:textSize="@dimen/sp_10"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_vip_origin_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="14dp"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/sp_12"
        app:layout_constraintTop_toBottomOf="@+id/item_become_vip_tail_ll_pay_con_01"
        tools:text="原价299" />

    <ImageView
        android:id="@+id/item_become_vip_tail_iv_pay_sel_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/become_vip_icon_pay_s"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</LinearLayout>