<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="10dp"
    android:paddingStart="15dp"
    android:paddingTop="15dp">

    <ImageView
        android:id="@+id/iv_tutor_service_comment_detail_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/head_service"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tutor_service_comment_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:text="李丽"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/iv_tutor_service_comment_detail_pic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="#好评 咨询师非常强 很和蔼 和咨询师交流很开心"
        android:textColor="@color/gray_999"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_tutor_service_comment_detail_name"
        app:layout_constraintTop_toBottomOf="@id/tv_tutor_service_comment_detail_name" />

    <TextView
        android:id="@+id/tv_tutor_service_comment_detail_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="5dp"
        android:text="用户首次评价，用户首次评价，用户首次评价，用户首次评价"
        android:textColor="@color/gray_222222"
        app:layout_constraintTop_toBottomOf="@id/iv_tutor_service_comment_detail_pic" />


    <LinearLayout
        android:id="@+id/ll_tutor_service_comment_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_tutor_service_comment_detail_content">

        <TextView
            android:id="@+id/tv_once_again_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="追加评价"
            android:textColor="@color/app_color"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="用户追加评价，用户追加评价，用户追加评价"
            android:textColor="@color/gray_222222" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/gray_edebeb"
        app:layout_constraintTop_toBottomOf="@id/ll_tutor_service_comment_detail" />

</android.support.constraint.ConstraintLayout>