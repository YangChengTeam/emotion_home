<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootView"
        android:layout_width="184dp"
        android:layout_height="110dp"
        android:layout_marginEnd="8dp"
        android:background="@mipmap/tutor_service_comment_bg"
        android:paddingBottom="12dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="11dp">

        <ImageView
            android:id="@+id/iv_tutor_service_comment_pic"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/head_bomb"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_tutor_service_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="3dp"
            android:text="张凡凡"
            android:textColor="@color/gray_222222"
            android:textSize="13dp"
            app:layout_constraintLeft_toRightOf="@id/iv_tutor_service_comment_pic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_tutor_service_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:lineSpacingExtra="5dp"
            android:maxLines="3"
            android:text="非常感谢老师的开导，非常感谢老师的开导，非常感谢老师的开导，非常感谢老师的开导"
            android:textColor="@color/gray_666"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_tutor_service_comment_pic" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>