<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_evaluate_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.yc.emotion.home.base.ui.widget.RoundCornerImg
            android:id="@+id/roundCornerImg_evaluate"
            android:layout_width="104dp"
            android:layout_height="70dp"

            android:scaleType="centerCrop"
            android:src="@mipmap/service_picture_one" />

        <TextView
            android:id="@+id/tv_evaluate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/roundCornerImg_evaluate"
            android:lineSpacingExtra="3dp"
            android:text="情感修复专家挽回服务情感修复专家挽回服务"
            android:textColor="@color/gray_222222" />
    </RelativeLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/gray_edebeb"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_evaluate_top" />

    <TextView
        android:id="@+id/tv_evaluate_content_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:lineSpacingExtra="5dp"
        android:text="导师讲解了很多，开导我很多，导师讲解了很多，开导我很多，导师讲解了很多，开导我很多，导师讲解了很多，开导我很多"
        android:textColor="@color/gray_222222"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_divider" />


    <View
        android:id="@+id/view_big_divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/gray_f2f2f2"
        app:layout_constraintTop_toBottomOf="@id/tv_evaluate_content_title" />


    <TextView
        android:id="@+id/tv_evaluate_course_score_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="追加评价"
        android:textColor="@color/gray_222222"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_big_divider" />

    <TextView
        android:id="@+id/tv_evaluate_content_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:text="0/200"
        android:textColor="@color/gray_999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_evaluate_course_score_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_evaluate_course_score_title" />

    <EditText
        android:id="@+id/et_evaluate_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:background="@null"
        android:gravity="left|top"
        android:hint="补充您的评价"
        android:lineSpacingExtra="5dp"
        android:maxLength="200"
        android:minHeight="200dp"
        android:textColor="@color/gray_939393"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_evaluate_course_score_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/et_evaluate_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/gray_f2f2f2" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>